{
	"mime": {
		"includes": [
			"mime.json"
		],
		"define": {
			"application/octet-stream": [
				"txt"
			]
		}
	},
	"cgi": {
		"python3": {
			"path": "/usr/bin/python3"
		},
		"bash": {
			"path": "/bin/bash"
		},
		"bash0": {
			"path": "/bin/ls"
		},
		"php-cgi": {
			"path": "/usr/bin/php-cgi",
			"environment": {
				"REDIRECT_STATUS": "1"
			}
		}
	},
	"servers": [
		{
			"port": 80,
			"host": "0.0.0.0",
			"name": [
				"boxplay.io"
			],
			"default": true,
			"maxBodySize": "1MB",
			"errors": {
				"500": "500.html",
				"400": "not-found.html"
			},
			"root": ".",
			"auth": {
				"type": "basic",
				"realm": "Restricted Area",
				"user": "user",
				"password": "password"
			},
			"locations": {
				"/wordpress": {
					"root": "/root/",
					"cgi": "php-cgi"
				},
				"/x.py": {
					"root": ".",
					"methods": [
						"GET"
					],
					"cgi": "python3"
				},
				"/x.php": {
					"root": ".",
					"cgi": "php-cgi"
				},
				"/x.sh": {
					"root": ".",
					"methods": [
						"GET"
					],
					"cgi": "bash"
				},
				"/xx/": {
					"methods": [
						"POST",
						"PUT"
					],
					"root": "/var/www/html",
					"listing": true,
					"index": [
						"index.html",
						"index-webserv.html"
					]
				},
				"/yy/": {
					"methods": [
						"GET",
						"POST",
						"PUT"
					],
					"root": "/var/www/mmorp",
					"listing": true,
					"index": [
						"index.html",
						"index-webserv.html"
					]
				}
			}
		}
	]
}
