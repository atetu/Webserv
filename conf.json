{
	"mime": {
		"includes": [
			"mime.json"
		],
		"define": {
			"application/octet-stream": [
				"txt"
			]
		}
	},
	"cgi": {
		"php": {
			"path": "/path/to/php"
		},
		"ruby": {
			"path": "/path/to/ruby"
		}
	},
	"servers": [
		{
			"port": 80,
			"host": "0.0.0.0",
			"name": [
				"boxplay.io",
				"localhost"
			],
			"default": true,
			"maxBodySize": "1MB",
			"errors": {
				"500": "500.html",
				"400": "not-found.html"
			},
			"root": "/var/www/html",
			"locations": {
				"/favicon.ico": {
					"methods": [
						"GET"
					],
					"alias": "icon.png"
				},
				"/xx/": {
					"methods": [
						"GET",
						"POST",
						"PUT"
					],
					"root": "/var/www/html",
					"listing": true,
					"index": [
						"index.html",
						"index-webserv.html"
					]
				},
				"/yy/": {
					"methods": [
						"GET",
						"POST",
						"PUT"
					],
					"root": "/var/www/mmorp",
					"listing": true,
					"index": [
						"index.html",
						"index-webserv.html"
					]
				},
				"~.php": {
					"cgi": "php"
				},
				"~.rb": {
					"cgi": "ruby"
				}
			}
		}
	]
}
