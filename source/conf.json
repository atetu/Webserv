{
	"maxActiveClient": 60,
	"mime": {
		"includes": [
			"mime.json"
		],
		"define": {
			"application/octet-stream": [
				"txt"
			]
		}
	},
	"cgi": {
		"python3": {
			"path": "/usr/bin/python3"
		},
		"bash": {
			"path": "/bin/bash"
		},
		"bash0": {
			"path": "/bin/ls"
		},
		"php-cgi": {
			"path": "/usr/bin/php-cgi",
			"extensions": [
				"php"
			],
			"environment": {
				"REDIRECT_STATUS": "1"
			}
		}
	},
	"servers": [
		{
			"port": 80,
			"host": "0.0.0.0",
			"name": [
				"boxplay.io"
			],
			"default": true,
			"maxBodySize": "1MB",
			"errors": {
				"500": "500.html",
				"400": "not-found.html"
			},
			"root": "../",
			"locations": {
				"/wordpress": {
					"root": "/root/",
					"cgi": "php-cgi",
					"index": [
						"index.php"
					]
				},
				"/superform": {
					"root": "/root/",
					"cgi": "php-cgi",
					"index": [
						"index.php"
					]
				},
				"/x.py": {
					"root": "../dummy-files/",
					"methods": [
						"GET"
					],
					"cgi": "python3"
				},
				"/x2.py": {
					"root": "../dummy-files/",
					"methods": [
						"GET"
					],
					"cgi": "python3"
				},
				"/_tests/x.php": {
					"root": ".",
					"cgi": "php-cgi"
				},
				"/_tests/x.sh": {
					"root": ".",
					"methods": [
						"GET"
					],
					"cgi": "bash"
				},
				"/_tests": {
					"root": ".",
					"methods": [
						"GET"
					],
					"index": [
						"index.html",
						"index.default.html"
					]
				}
			}
		}
	]
}
